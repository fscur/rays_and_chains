  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Linux) Launch Sandbox",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/linux/r_engine",
      "args": [
        "sandbox",
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/bin/linux",
      "environment": [
        {
          "name": "DISPLAY",
          "value": "192.168.0.14:0.0"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(Linux) Launch Hammer",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/linux/r_engine",
      "args": [
        "hammer",
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/bin/linux",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(Windows) Attach",
      "type": "cppvsdbg",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "(Windows) Launch Sandbox",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/windows/r_engine.exe",
      "args": [
        "sandbox"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/bin/windows",
      "environment": [],
      "externalConsole": true
    },
    {
      "name": "(Windows) Launch Hammer",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/windows/r_engine.exe",
      "args": [
        "hammer"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/bin/windows",
      "environment": [],
      "externalConsole": true
    },
    {
      "name": "(Windows) Launch Launcher",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/windows/r_launcher.exe",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/bin",
      "environment": [],
      "externalConsole": true
    },
    {
      "name": "(Windows) Launch Bumpver",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/tools/bumpver/bumpver.exe",
      "args": [
        "P:\\bin\\plugins\\plugin_a.dll"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/tools/bumpver",
      "environment": [],
      "externalConsole": true
    },
  ]
}