  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Client",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/linux/r_engine",
      "args": [
        "sandbox",
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/bin",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(Windows) Attach",
      "type": "cppvsdbg",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "(Windows) Launch Hammer",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/r_engine.exe",
      "args": [
        "hammer"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/bin",
      "environment": [],
      "externalConsole": true
    },
    {
      "name": "(Windows) Launch Launcher",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/r_launcher.exe",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/bin",
      "environment": [],
      "externalConsole": true
    },
    {
      "name": "(Windows) Launch Bumpver",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/tools/bumpver/bumpver.exe",
      "args": [
        "P:\\bin\\plugins\\plugin_a.dll"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/tools/bumpver",
      "environment": [],
      "externalConsole": true
    },
