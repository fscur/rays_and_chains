{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build:debug",
            "type": "shell",
            "windows": {
                "options": {
                    "cwd": "p:\\scripts\\windows"
                },
                "command": "p:\\scripts\\windows\\build_debug.bat"
            },
            "linux": {
                "command": "./scripts/linux/build_debug.sh"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "open vs debugger",
            "type": "shell",
            "windows": {
                "options": {
                    "cwd": "p:\\scripts\\windows"
                },
                "command": "p:\\scripts\\windows\\debug.bat"
            },
            "linux": {
                "command": "./scripts/linux/debug.sh"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}